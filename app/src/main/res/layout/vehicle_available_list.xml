<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.graphics.Color"/>
        <import type="androidx.core.content.ContextCompat" />

        <variable
            name="UiColor"
            type="com.rentguruz.app.model.display.ThemeColors" />

        <variable
            name="Vehicle"
            type="com.rentguruz.app.model.response.VehicleModel" />
    </data>

    <LinearLayout
        android:id="@+id/vehicle_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:background="@drawable/top_curve_light_gray"
            android:backgroundTint="@{Color.parseColor(UiColor.AddtionalSecondColour)}"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/txt_VehicleTypeName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="75"
                    android:padding="@dimen/_5sdp"
                    android:text="@={Vehicle.VehicleClass}"
                    android:textColor="@color/registerTextColor"
                    android:textSize="@dimen/_10ssp"
                    android:theme="@style/texttheme" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="25"
                    android:gravity="right">

                    <RelativeLayout
                        android:id="@+id/available"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_17sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_rectangle_box1_light_122"
                        android:backgroundTint="@{Color.parseColor(UiColor.secondary)}"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txt_availableqty"
                            style="@style/btntext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:text=""
                            android:textAlignment="gravity"
                            android:textAllCaps="false"
                            android:textSize="@dimen/_9ssp"
                            android:theme="@style/texttheme" />

                        <TextView
                            style="@style/btntext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:layout_toRightOf="@+id/txt_availableqty"
                            android:text="Available"
                            android:textAlignment="gravity"
                            android:textAllCaps="false"
                            android:textSize="@dimen/_9ssp"
                            android:theme="@style/texttheme"
                            app:_vehiclestatus="@{String.valueOf(Vehicle.Status)}"/>

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="60"
                    android:background="@drawable/curve_box_white"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/vehicle_model_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="@={Vehicle.VehicleShortName}"
                            android:textColor="@color/txtBlack"
                            android:textSize="13dp"
                            android:theme="@style/texttheme" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_toRightOf="@+id/vehicle_model_name"
                            android:text="Or Similar"
                            android:textColor="@color/txtBlack"
                            android:textSize="@dimen/_10ssp"
                            android:theme="@style/texttheme"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_gravity="start|center">
                        <!--<ImageView
                            android:id="@+id/car_imgview"
                            app:_imageUrl="@{Vehicle.DefaultImagePath}"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_width="130dp"
                            android:layout_height="85dp"/>-->

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/car_imgview"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/car_icon"
                            app:_imageUrl="@{Vehicle.DefaultImagePath}"
                            app:shapeAppearance="@style/roundedImageViewRounded" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="40"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="2dp"
                        android:weightSum="8">
                        <!--<RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:src="@drawable/ic_gear_1"
                                android:layout_height="@dimen/_10sdp"/>
                        </RelativeLayout>-->

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_gear_1" />

                        <TextView
                            android:id="@+id/txt_transmission_Name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:layout_weight="7"
                            android:hint=""
                            android:text="@{Vehicle.TransmissionDesc}"
                            android:textColor="@color/registerTextColor"
                            android:textSize="@dimen/_10ssp"
                            android:theme="@style/texttheme" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="2dp"
                        android:weightSum="8">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:src="@drawable/ic_car_seat_img" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_seats"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_4sdp"
                                android:text="@{String.valueOf(Vehicle.NoOfSeats)+ @string/seats}"
                                android:textColor="@color/registerTextColor"
                                android:textSize="@dimen/_10ssp"
                                android:theme="@style/texttheme" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="2dp"
                        android:weightSum="8">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:src="@drawable/ac_icon" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="7"
                            android:text="@{Vehicle.FuelTypeDesc}"
                            android:textColor="@color/registerTextColor"
                            android:textSize="@dimen/_10ssp"
                            android:theme="@style/texttheme" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="2dp"
                        android:weightSum="8">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:src="@drawable/doors_icon" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_doors"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="@{String.valueOf(Vehicle.NoOfDoors) + @string/doors }"
                                android:textColor="@color/registerTextColor"
                                android:textSize="@dimen/_10ssp"
                                android:theme="@style/texttheme" />
                        </LinearLayout>
                    </LinearLayout>

                    <!--<LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="2dp"
                        android:weightSum="8">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:src="@drawable/bag_icon" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtbags"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_4sdp"
                                android:text="@{String.valueOf(Vehicle.NoOfBags) + @string/bags}"
                                android:textColor="@color/registerTextColor"
                                android:textSize="@dimen/_10ssp"
                                android:theme="@style/texttheme" />
                        </LinearLayout>
                    </LinearLayout>-->
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="4">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:background="@drawable/green_bottom_curve"
                android:backgroundTint="@{Color.parseColor(UiColor.primary)}"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtDayPrice"
                        style="@style/btntext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:hint="$ 34.00/ Day"
                        android:textSize="@dimen/_9ssp"
                        android:theme="@style/texttheme"
                        android:textColor="@color/btntext"
                        android:textColorHint="@color/btntext"
                        app:_DayPrice="@{Vehicle.PerDayAmount}" />

                    <!--android:text="@{@string/dollar2 +String.valueOf(Vehicle.SecurityDeposit) + @string/deposite}"
                    android:text="@{@string/dollar +String.valueOf(Vehicle.PerDayAmount) + @string/charge}"-->
                    <TextView
                        android:id="@+id/txtDeposite"
                        style="@style/btntext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:hint="$ 1200.00/ Deposit"
                        android:textSize="@dimen/_9ssp"
                        android:theme="@style/texttheme"
                        android:textColor="@color/btntext"
                        android:textColorHint="@color/btntext"
                        android:singleLine="true"
                        app:_Diposits="@{Double.valueOf(Vehicle.SecurityDeposit)}" />
                </LinearLayout>


                <TextView
                    android:id="@+id/kmmm"
                    style="@style/btntext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:text="Unlimited KMS Included"
                    app:_kms="@{String.valueOf(Vehicle.dvalue)}"
                    android:textSize="@dimen/_9ssp"
                    android:textColor="@color/btntext"
                    android:theme="@style/texttheme" />

                <!-- <LinearLayout
                     android:layout_width="wrap_content"
                     android:gravity="center_vertical"
                     android:layout_height="match_parent">
                              <TextView
                         android:layout_width="match_parent"
                         android:text="PER DAY"
                         android:layout_marginLeft="10dp"
                         android:textSize="@dimen/textsize_ten"

                         android:layout_gravity="center"
                         android:gravity="center"
                         android:textColor="@color/TitleTextColor"
                         android:layout_height="match_parent"/>
                 </LinearLayout>
                    <LinearLayout
                     android:layout_marginRight="5dp"
                     android:layout_alignParentRight="true"
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent">
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:text="$ "
                         android:gravity="center"
                         android:layout_margin="2dp"

                         android:textColor="@color/TitleTextColor"
                         android:textSize="15dp"/>

                        <TextView
                            android:id="@+id/txt_perday"
                            android:layout_width="wrap_content"
                            android:text="@{String.valueOf(Vehicle.PerDayAmount)}"
                            android:gravity="center"

                            android:textColor="@color/TitleTextColor"
                            android:textSize="15dp"
                            android:layout_height="match_parent">
                        </TextView>

                    </LinearLayout>-->

            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@drawable/black_bottom_curve"
                android:backgroundTint="@{Color.parseColor(UiColor.secondary)}"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:gravity="center"
                        android:text="Total"
                        android:textColor="@color/TitleTextColor"
                        android:textSize="@dimen/_11ssp"
                        android:textStyle="bold"
                        android:theme="@style/texttheme" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp">
                    <!--  <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:text="$ "
                          android:gravity="center"
                          android:layout_margin="2dp"

                          android:textColor="@color/TitleTextColor"
                          android:textSize="15dp"/>-->
                    <TextView
                        android:id="@+id/txt_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="$ 400.00"
                        android:textStyle="bold"
                        android:textColor="@color/TitleTextColor"
                        android:textSize="@dimen/_11ssp"
                        android:theme="@style/texttheme"
                        app:_value="@{Vehicle.TotalAmount}"/>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</layout>