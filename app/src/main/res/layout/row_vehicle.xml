<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <data>
        <variable
            name="Vehicle"
            type="com.abel.app.b2b.model.response.VehicleModel" />
    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lblVehiclesLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/top_curve_light_gray_6"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="100"
                        android:padding="5dp"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:background="@drawable/aquamarine_blue"
                            android:layout_width="0dp"
                            android:gravity="center_vertical"
                            android:layout_weight="20"
                            android:layout_height="17dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Sedan"
                                android:text="@={Vehicle.VehicleClass}"
                                android:textSize="8dp"
                                android:paddingLeft="5dp"
                                android:textAllCaps="false"
                                android:layout_margin="1dp"
                                android:textAlignment="gravity"
                                 style="@style/textfont"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white">
                            </TextView>
                        </LinearLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="60"
                            android:hint="Head Office"
                            android:text="@={Vehicle.ParkedLocation}"
                            android:layout_marginLeft="5dp"
                            android:textSize="@dimen/eleven"
                             style="@style/textfont"
                            android:textColor="@color/textlightcolor"
                            android:layout_height="match_parent"/>
                        <LinearLayout
                            android:background="@drawable/aquamarine_bg"
                            android:layout_width="0dp"
                            android:layout_weight="20"
                            android:gravity="center"
                            android:layout_height="17dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="8sp"
                                android:textAllCaps="true"
                                android:layout_margin="1dp"
                                android:textAlignment="gravity"
                                 style="@style/textfont"
                                android:textColor="@color/white">
                            </TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Available"
                                android:textSize="8dp"
                                android:textAllCaps="false"
                                android:layout_margin="1dp"
                                android:textAlignment="gravity"
                                 style="@style/textfont"
                                android:textColor="@color/white">
                            </TextView>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_below="@+id/ll"
                    android:id="@+id/llprice"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/sixteen"
                        android:textColor="@color/black"
                         style="@style/textfont"
                        android:layout_height="match_parent"
                        app:_DayPrice="@{Vehicle.PerDayAmount}"
                        android:hint="$332.00"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:gravity="bottom"
                        android:layout_marginBottom="3dp"
                        android:textSize="@dimen/eight"
                         style="@style/textfont"
                        android:textColor="@color/black"
                        android:layout_height="match_parent"
                        android:text=" / Daily"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="#DEDDDD"
                    android:layout_below="@+id/llprice"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:paddingBottom="12dp"
                        android:gravity="right">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="30dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:padding="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:orientation="horizontal"
                                android:padding="2dp"
                                android:weightSum="8">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_gear_1" />
                                </LinearLayout>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:layout_weight="7"
                                     style="@style/textfont"
                                    android:hint="Automatic"
                                    android:text="@{Vehicle.TransmissionDesc}"
                                    android:textColor="@color/registerTextColor"
                                    android:textSize="@dimen/textsize_ten" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="3dp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="2dp"
                                android:weightSum="8">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_car_seat_img" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="7"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="4dp"
                                        android:textColor="@color/registerTextColor"
                                         style="@style/textfont"
                                        android:hint="5"
                                        android:text="@{String.valueOf(Vehicle.NoOfSeats)}"
                                        android:textSize="@dimen/textsize_ten" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="4dp"
                                         style="@style/textfont"
                                        android:text="Seats"
                                        android:textColor="@color/registerTextColor"
                                        android:textSize="@dimen/textsize_ten" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="3dp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="2dp"
                                android:weightSum="8">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ac_icon" />
                                </LinearLayout>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:layout_weight="7"
                                    android:textColor="@color/registerTextColor"
                                     style="@style/textfont"
                                    android:hint="Air Condition"
                                    android:text="@{Vehicle.FuelTypeDesc}"
                                    android:textSize="@dimen/textsize_ten" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="3dp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="2dp"
                                android:weightSum="8">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/door_icon" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="7"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="4dp"
                                        android:textColor="@color/registerTextColor"
                                         style="@style/textfont"
                                        android:hint="5"
                                        android:text="@{String.valueOf(Vehicle.NoOfDoors) }"
                                        android:textSize="@dimen/textsize_ten" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="4dp"
                                         style="@style/textfont"
                                        android:textColor="@color/registerTextColor"
                                        android:text="Doors"
                                        android:textSize="@dimen/textsize_ten" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="3dp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="2dp"
                                android:weightSum="8">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/bag_icon" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="7"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="4dp"
                                         style="@style/textfont"
                                        android:textColor="@color/registerTextColor"
                                        android:hint="5"
                                        android:text="@{String.valueOf(Vehicle.NoOfBags)}"
                                        android:textSize="@dimen/textsize_ten" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="4dp"
                                         style="@style/textfont"
                                        android:textColor="@color/registerTextColor"
                                        android:text="Bags"
                                        android:textSize="@dimen/textsize_ten" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:paddingRight="10dp"
                    android:layout_below="@+id/ll"
                    android:layout_marginLeft="7dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:background="@drawable/curve_box_white_5dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:padding="4dp"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                             style="@style/textfont"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fourteen"
                            android:hint="2011 Mitsubishi Mirage LX"
                            android:text="@={Vehicle.VehicleShortName}"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:text=""
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/textsize_ten"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:paddingRight="20dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="190dp"
                            android:layout_height="90dp"
                            app:_imageUrl="@{Vehicle.DefaultImagePath}"
                            android:src="@drawable/blue_car" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/nine"
                             style="@style/textfont"
                            android:textColor="#8F9BB3"
                            android:hint="LIC000001"
                            android:text="@={Vehicle.VehicleNumber}"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/nine"
                             style="@style/textfont"
                            android:textColor="#8F9BB3"
                            android:text=" / "/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/nine"
                             style="@style/textfont"
                            android:textColor="#8F9BB3"
                            android:hint="VIN000009"
                            android:text="@={Vehicle.VinNumber}"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/nine"
                             style="@style/textfont"
                            android:textColor="#8F9BB3"
                            android:text=" / "/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/nine"
                             style="@style/textfont"
                            android:textColor="#8F9BB3"
                            android:hint="VH382929"
                            android:text="@={Vehicle.LicenseNumber}"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_marginBottom="2dp"
                android:layout_height="35dp">

                <LinearLayout
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:orientation="horizontal"
                    android:background="@drawable/left_curve_bottom_blue"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:text="@string/new_reservation"
                        android:textSize="@dimen/twelve"
                         style="@style/textfont"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:orientation="horizontal"
                    android:background="@drawable/right_curve_bottom_blue"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:text="@string/new_agreement"
                        android:textSize="@dimen/twelve"
                         style="@style/textfont"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
</layout>