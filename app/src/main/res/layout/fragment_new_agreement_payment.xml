                                                android:layout_height="wrap_content"
                                                android:layout_marginRight="2dp"
                                                android:text=""
                                                android:textColor="@color/pcolort1"
                                                android:textSize="@dimen/txt_font_size"
                                                android:theme="@style/texttheme" />

                                            <TextView android:theme="@style/texttheme"
