                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Amount"
                    android:textColor="@color/textColorHint"
                    android:textSize="@dimen/edt_font_size"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/currency"
                        android:layout_width="wrap_content"
                        android:text="$"
                        android:textColor="@color/TitleTextColor"
                        android:textSize="@dimen/twenty_two"

                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txt_TotalAmount"
                        android:layout_width="wrap_content"
                        android:text=" 2000.00"
                        android:textColor="@color/TitleTextColor"
                        android:textSize="@dimen/twenty_two"

                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fueltype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Mileage"
                    android:textColor="@color/textColorHint"
                    android:textSize="@dimen/edt_font_size"/>

                <TextView
                    android:id="@+id/txtMileage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="400 kms"
                    android:textColor="@color/TitleTextColor"
                    android:textSize="@dimen/twenty_two"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="13dp"
                android:layout_weight="30"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lbl_confirm_2"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/curved_box_bg"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:gravity="end"
                        android:text="Select \nCustomer"
                        android:textColor="@color/TitleTextColor"
                        android:textSize="@dimen/appbar_padding"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/slider"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:background="@color/lightgreen"
            tools:openDrawer="right"
            >

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/green">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/sliderimage"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Custom \nRental \nRates"
                    android:textSize="20dp"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            </LinearLayout>

        </androidx.drawerlayout.widget.DrawerLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>