<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.graphics.Color"/>
        <import type="androidx.core.content.ContextCompat" />

        <variable
            name="UiColor"
            type="com.rentguruz.app.model.display.ThemeColors" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@{Color.parseColor(UiColor.secondary)}"
        android:background="@color/backgroundColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/lblAddNote"
            android:orientation="vertical">

            <include
                android:id="@+id/header"
                app:UiColor="@{UiColor}"
                layout="@layout/row_header" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/selectedlocation"
                android:layout_marginTop="0dp"
                android:background="@drawable/curve_box">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:theme="@style/texttheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Bill To"
                            android:textSize="@dimen/fab_margin" />


                        <TextView
                            android:theme="@style/texttheme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="10dp"
                            android:gravity="end"
                            android:text="@string/edit"
                            android:textSize="@dimen/fab_margin" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/footerButtonBC" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:theme="@style/texttheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="Select Entity"
                            android:textAllCaps="false"
                            android:textColor="@color/registerTextColor"
                            android:textSize="@dimen/thirteen" />

                        <Spinner
                            style="@style/spinner"
                            android:theme="@style/loginedit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/ic_spinner_bg_light" />

                        <TextView
                            android:theme="@style/texttheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="Select Name"
                            android:textAllCaps="false"
                            android:textColor="@color/registerTextColor"
                            android:textSize="@dimen/thirteen" />



                        <EditText
                            style="@style/edittext"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:imeOptions="actionNext" />


                        <TextView
                            android:theme="@style/texttheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="Contact Name"
                            android:textAllCaps="false"
                            android:textColor="@color/registerTextColor"
                            android:textSize="@dimen/thirteen" />

                        <EditText
                            style="@style/edittext"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:imeOptions="actionNext" />


                        <TextView
                            android:theme="@style/texttheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="Contact Number"
                            android:textAllCaps="false"
                            android:textColor="@color/registerTextColor"
                            android:textSize="@dimen/thirteen" />

                        <EditText
                            style="@style/edittext"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:imeOptions="actionNext" />

                        <TextView
                            android:theme="@style/texttheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="Email"
                            android:textAllCaps="false"
                            android:textColor="@color/registerTextColor"
                            android:textSize="@dimen/thirteen" />

                        <EditText
                            style="@style/edittext"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:imeOptions="actionDone" />


                        <TextView
                            android:theme="@style/texttheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="Upload Logo"
                            android:textAllCaps="false"
                            android:textColor="@color/registerTextColor"
                            android:textSize="@dimen/thirteen" />


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_upload_logo_bg"/>
                    </LinearLayout>


                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>



            <LinearLayout
                android:id="@+id/lblAddNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/text"
                    style="@style/fullbtn"
                    android:text="@string/accept"/>

            </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>