<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.graphics.Color" />
        <import type="androidx.core.content.ContextCompat" />

        <variable
            name="UiColor"
            type="com.rentguruz.app.model.display.ThemeColors" />
    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_invoice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/light_gray_box1"
        android:orientation="horizontal"
        android:padding="4dp"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="32"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_StatementName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Traffic fine"
                android:textStyle="bold"
                android:textColor="@{Color.parseColor(UiColor.primary)}"
                android:textAllCaps="false"
                android:textSize="14dp"
                android:theme="@style/texttheme" />

            <TextView
                android:id="@+id/txt_oneTimeCharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="One Time Charge"

                android:textSize="12dp"
                android:theme="@style/texttheme" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:src="@drawable/rectanglebox_lightgray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:layout_weight="19"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:text="Month "
                android:textColor="@color/MGrey"
                android:textStyle="bold"
                android:textSize="12dp"
                android:theme="@style/texttheme" />

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="18830002"

                android:textSize="12dp"
                android:theme="@style/texttheme" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:src="@drawable/rectanglebox_lightgray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="17"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="1dp"
                android:text="Invoice "
                android:textColor="@color/MGrey"
                android:textStyle="bold"

                android:textSize="12dp"
                android:theme="@style/texttheme" />

            <TextView
                android:id="@+id/txt_invoiceNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="1dp"
                android:text="18830002"

                android:textSize="12dp"
                android:theme="@style/texttheme" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="32"
            android:gravity="right"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/Payment_Status_Layout"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_rectangle_darkgreen"
                android:backgroundTint="@{Color.parseColor(UiColor.primary)}"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_PaymentStatus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="Paid"
                    android:textAllCaps="false"
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:theme="@style/texttheme"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal"
                android:padding="1dp">

                <TextView
                    android:id="@+id/currency"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="USD$ "
                    android:textAllCaps="false"
                    android:textSize="16dp"
                    android:theme="@style/texttheme"/>

                <TextView
                    android:id="@+id/text_totalAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2000.00"
                    android:textAllCaps="false"
                    android:textSize="16dp"
                    android:theme="@style/texttheme"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</layout>