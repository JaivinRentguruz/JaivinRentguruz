<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.graphics.Color"/>
        <import type="androidx.core.content.ContextCompat" />

        <variable
            name="UiColor"
            type="com.rentguruz.app.model.display.ThemeColors" />

    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        android:backgroundTint="@{Color.parseColor(UiColor.secondary)}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/header"
                app:UiColor="@{UiColor}"
                layout="@layout/row_header" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/selectedlocation"
                android:layout_marginTop="0dp"
                android:background="@drawable/curve_box">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:theme="@style/texttheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Bill To"
                            android:textSize="@dimen/fab_margin" />


                        <TextView
                            android:theme="@style/texttheme"
                            android:id="@+id/edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="10dp"
                            android:gravity="end"
                            android:text="@string/edit"
                            android:textSize="@dimen/fab_margin" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/green"
                        android:backgroundTint="@{Color.parseColor(UiColor.primary)}"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:theme="@style/texttheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="Select Entity"
                            android:textAllCaps="false"
                            android:textColor="@color/registerTextColor"
                            android:textSize="@dimen/thirteen" />

                        <Spinner
                            style="@style/spinner"
                            android:theme="@style/loginedit"
                            android:id="@+id/entity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/ic_spinner_bg_light" />

                        <TextView
                            android:theme="@style/texttheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="Select Name"
                            android:textAllCaps="false"
                            android:textColor="@color/registerTextColor"
                            android:textSize="@dimen/thirteen" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <Spinner
                                style="@style/spinner"
                                android:theme="@style/loginedit"
                                android:layout_marginTop="0dp"
                                android:id="@+id/userlist"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_spinner_bg_light" />

                            <AutoCompleteTextView
                                android:theme="@style/texttheme"
                                style="@style/edittext"
                                android:id="@+id/searchview"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAllCaps="false"
                                android:textColor="@color/registerTextColor"
                                android:dropDownSelector="@color/green"
                                android:textSize="@dimen/thirteen"
                                android:background="@drawable/ic_rectanglebox_215" />

                        </RelativeLayout>


                        <!--        <Spinner
                                    android:id="@+id/userlist"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/ic_rectanglebox_215" />-->

                        <!--     <SearchView
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent" />-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/ic_full_curve_box"
                            android:backgroundTint="@{Color.parseColor(UiColor.additionalcolor)}"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="6dp"
                            android:weightSum="100">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="2dp"
                                android:layout_weight="35">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="2dp"
                                android:layout_weight="65"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="5dp"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:theme="@style/texttheme"
                                            android:text=""
                                            android:textColor="@color/regtcolor"
                                            android:textSize="@dimen/sixteen" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="2dp"
                                            android:gravity="center_vertical"
                                            android:orientation="horizontal">

                                            <ImageView
                                                android:layout_width="15dp"
                                                android:layout_height="15dp"
                                                android:layout_marginTop="2dp"
                                                android:src="@drawable/ic_call_icon_small"
                                                app:tint="@color/black" />

                                            <TextView
                                                android:id="@+id/number"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="5dp"
                                                android:theme="@style/texttheme"
                                                android:text=""
                                                android:textColor="@color/textlightcolor"
                                                android:textSize="@dimen/twelve" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="3dp"
                                            android:gravity="center_vertical"
                                            android:orientation="horizontal">

                                            <ImageView
                                                android:layout_width="15dp"
                                                android:layout_height="15dp"
                                                android:layout_marginTop="2dp"
                                                android:src="@drawable/ic_mail_icon"
                                                app:tint="@color/black" />

                                            <TextView
                                                android:id="@+id/email"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="5dp"
                                                android:theme="@style/texttheme"
                                                android:text=""
                                                android:textColor="@color/textlightcolor"
                                                android:textSize="@dimen/twelve" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="2dp"
                                            android:gravity="center"
                                            android:orientation="horizontal">

                                            <ImageView
                                                android:layout_width="15dp"
                                                android:layout_height="15dp"
                                                android:layout_marginTop="2dp"
                                                android:scaleType="fitXY"
                                                android:src="@drawable/ic_black_location_pin"
                                                app:tint="@color/black" />

                                            <TextView
                                                android:id="@+id/address"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="5dp"
                                                android:theme="@style/texttheme"
                                                android:text=""
                                                android:textColor="@color/textlightcolor"
                                                android:textSize="@dimen/twelve" />
                                        </LinearLayout>

                                    </LinearLayout>
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:visibility="gone"
                            android:theme="@style/texttheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="Claim Number"
                            android:textAllCaps="false"
                            android:textColor="@color/registerTextColor"
                            android:textSize="@dimen/thirteen" />

                        <EditText
                            android:visibility="gone"
                            style="@style/edittext"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:imeOptions="actionNext" />


                        <TextView
                            android:visibility="gone"
                            android:theme="@style/texttheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="Claim Date"
                            android:textAllCaps="false"
                            android:textColor="@color/registerTextColor"
                            android:textSize="@dimen/thirteen" />

                        <EditText
                            android:visibility="gone"
                            style="@style/edittext"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:imeOptions="actionDone"
                            android:nextFocusDown="@id/edt_CustUnitNo" />


                    </LinearLayout>


                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>



            <LinearLayout
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/text"
                    style="@style/fullbtn"
                    android:backgroundTint="@{Color.parseColor(UiColor.primary)}"
                    android:text="Add Billing Detail"/>

            </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>