                 </RelativeLayout>-->

            </LinearLayout>

            <LinearLayout
                android:id="@+id/selectedlocationlayout"
                android:layout_below="@id/selectedlocation"
                android:background="@drawable/curve_box"
                android:layout_above="@id/test"
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_height="wrap_content">

                        <TextView  android:theme="@style/texttheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="15dp"

                            android:text="All Images"
                            android:textAllCaps="false"
                            android:textColor="@color/fontwhitebackground"
                            android:textSize="17dp" />


                        <TextView  android:theme="@style/texttheme"
                            android:id="@+id/text_DateTime12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"

                            android:text="01/01/2020 09:00 am"
                            android:textAllCaps="false"
                            android:textColor="@color/fontwhitebackground"
                            android:textSize="12dp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:background="@color/textColorHint" />
                </LinearLayout>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/selectedlocationlayout"
                    android:background="@drawable/curve_box"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:paddingTop="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"

                            android:weightSum="2">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="105dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/ic_rectangle_bg_camera">

                                <ImageView
                                    android:id="@+id/car_image_1"
                                    android:layout_width="match_parent"
                                    android:layout_margin="1dp"
                                    android:scaleType="fitXY"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="105dp"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/ic_rectangle_bg_camera">

                                <ImageView
                                    android:id="@+id/car_image_2"
                                    android:layout_margin="1dp"
                                    android:scaleType="fitXY"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true" />

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:weightSum="2">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="105dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/ic_rectangle_bg_camera">

                                <ImageView
                                    android:id="@+id/car_image_3"
                                    android:layout_margin="1dp"
                                    android:scaleType="fitXY"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="105dp"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/ic_rectangle_bg_camera">

                                <ImageView
                                    android:id="@+id/car_image_4"
                                    android:layout_margin="1dp"
                                    android:scaleType="fitXY"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true" />

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:weightSum="2">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="105dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/ic_rectangle_bg_camera">

                                <ImageView
                                    android:id="@+id/car_image_5"
                                    android:layout_margin="1dp"
                                    android:scaleType="fitXY"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="105dp"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/ic_rectangle_bg_camera">

                                <ImageView
                                    android:id="@+id/car_image_6"
                                    android:layout_margin="1dp"
                                    android:scaleType="fitXY"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true" />

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:weightSum="2">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="105dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/ic_rectangle_bg_camera">

                                <ImageView
                                    android:id="@+id/car_image_7"
                                    android:layout_margin="1dp"
                                    android:scaleType="fitXY"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="105dp"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/ic_rectangle_bg_camera">

                                <ImageView
                                    android:id="@+id/car_image_8"
                                    android:layout_margin="1dp"
                                    android:scaleType="fitXY"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true" />

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:weightSum="2">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="105dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/ic_rectangle_bg_camera">

                                <ImageView
                                    android:id="@+id/car_image_9"
                                    android:scaleType="fitXY"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_margin="1dp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="105dp"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/ic_rectangle_bg_camera">

                                <ImageView
                                    android:id="@+id/car_image_10"
                                    android:layout_margin="1dp"
                                    android:scaleType="fitXY"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true" />

                            </RelativeLayout>
                        </LinearLayout>


                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/test"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottommenuheight"
                android:weightSum="100"
                android:background="@color/footerButtonBC"
                android:backgroundTint="@{Color.parseColor(UiColor.primary)}"
                android:paddingHorizontal="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_weight="55">
                    <!-- <RelativeLayout
                         android:layout_width="wrap_content"
                         android:gravity="center"
                         android:layout_gravity="center_vertical"
                         android:layout_height="match_parent">-->

                    <RadioButton
                        android:layout_marginTop="10dp"
                        android:text="Send Waiver Signature"
                        android:theme="@style/texttheme"
                        android:textColor="@color/white"
                        android:fontFamily="@font/quicksand_medium"
                        android:textSize="14dp"
                        android:buttonTint="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <!--</RelativeLayout>-->

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/backNext_additionalimg"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="45"
                    android:layout_marginVertical="7dp"
                    android:background="@drawable/curve_box_green"
                    android:backgroundTint="@{Color.parseColor(UiColor.secondary)}">

                    <TextView
                        android:theme="@style/texttheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/next"
                        android:textAllCaps="false"
                        android:textColor="@color/btntext"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>