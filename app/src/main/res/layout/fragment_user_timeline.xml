<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/selected_dot"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/selectedlocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_to_userprofile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@drawable/ic_chevron_left" />

                <TextView  android:theme="@style/texttheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:text="User timeline"
                    android:textAllCaps="false"
                    android:textColor="@color/topcolor"
                    android:textSize="17dp" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="17"
            android:padding="2dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:paddingTop="5dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView  android:theme="@style/texttheme"
                    android:text="MON"
                    android:textAllCaps="false"
                    android:textSize="11dp"

                    android:textColor="@color/fontwhitebackground"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView  android:theme="@style/texttheme"
                    android:text="22"
                    android:textSize="12dp"

                    android:textColor="@color/fontwhitebackground"
                    android:padding="2dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:paddingTop="5dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView  android:theme="@style/texttheme"
                    android:text="Tue"
                    android:textAllCaps="false"
                    android:textSize="11dp"

                    android:textColor="@color/fontwhitebackground"
                    android:padding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView  android:theme="@style/texttheme"
                    android:text="23"
                    android:textSize="12dp"
                    android:layout_marginTop="3dp"

                    android:textColor="@color/fontwhitebackground"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:paddingTop="5dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView  android:theme="@style/texttheme"
                    android:text="Wed"
                    android:textSize="11dp"

                    android:textColor="@color/fontwhitebackground"
                    android:textAllCaps="false"
                    android:padding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView  android:theme="@style/texttheme"
                    android:text="24"
                    android:textSize="12dp"
                    android:layout_marginTop="3dp"

                    android:textColor="@color/fontwhitebackground"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:background="@drawable/background_black"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:paddingTop="5dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView  android:theme="@style/texttheme"
                    android:text="thu"
                    android:textAllCaps="false"
                    android:textSize="11dp"

                    android:textColor="@color/fontwhitebackground"
                    android:padding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <TextView  android:theme="@style/texttheme"
                    android:text="25"
                    android:textSize="12dp"
                    android:layout_marginTop="3dp"

                    android:textColor="@color/fontwhitebackground"
                    android:gravity="center"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:paddingTop="5dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView  android:theme="@style/texttheme"
                    android:text="fri"
                    android:textAllCaps="false"
                    android:textSize="11dp"

                    android:textColor="@color/fontwhitebackground"
                    android:padding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView  android:theme="@style/texttheme"
                    android:text="26"
                    android:textSize="12dp"
                    android:layout_marginTop="3dp"

                    android:textColor="@color/fontwhitebackground"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:paddingTop="5dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView  android:theme="@style/texttheme"
                    android:text="sat"
                    android:textAllCaps="false"
                    android:textSize="11dp"

                    android:textColor="@color/fontwhitebackground"
                    android:padding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView  android:theme="@style/texttheme"
                    android:text="27"
                    android:textSize="12dp"

                    android:textColor="@color/fontwhitebackground"
                    android:padding="2dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:paddingTop="5dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView  android:theme="@style/texttheme"
                    android:text="sun"
                    android:textSize="11dp"
                    android:textAllCaps="false"

                    android:textColor="@color/fontwhitebackground"
                    android:padding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView  android:theme="@style/texttheme"
                    android:text="28"
                    android:textSize="12dp"
                    android:layout_marginTop="3dp"

                    android:textColor="@color/fontwhitebackground"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/selectedlocation"
            android:orientation="horizontal"
            android:background="@drawable/curve_box_green"
            android:backgroundTint="@color/MGrey"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="match_parent">



            <LinearLayout
                android:id="@+id/calanderviewlayout"
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_height="70dp">
            <devs.mulham.horizontalcalendar.HorizontalCalendarView
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="2dp"
                android:visibility="visible"
                android:layout_height="wrap_content"
                android:id="@+id/calendar_View"
                app:textColorSelected="@color/white"
                android:background="@color/MGrey"
                app:selectedDateBackground="@drawable/black_curve2" />
              </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_below="@id/selectedlocation"
            android:layout_marginTop="70dp"
            android:background="@drawable/curve_box">

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:theme="@style/texttheme"
                    android:text="@string/timeline"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/selected_dot"
                    android:textSize="@dimen/_14ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="100">

                <EditText
                    android:id="@+id/Edt_searchUsertimeline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="88"
                    android:gravity="center_vertical"
                    android:layout_marginRight="8dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:background="@drawable/ic_rectangle_forsearch"
                    android:textSize="@dimen/edt_font_size"
                    android:theme="@style/textfont"
                    android:hint="Search"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/ic_timeline_search_icon"
                    android:textColorHint="@color/textColorHint"
                    android:textColor="@color/registerTextColor"
                    android:layout_gravity="center_vertical"/>

                <LinearLayout
                    android:id="@+id/filter_IconForTimeline"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="12">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_rectangle_greenbox"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/AddActivityimg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_plus_icon"
                            app:tint="@color/white" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:visibility="visible"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:background="@color/MGrey"
                android:layout_height="1dp">
            </View>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/selectedlocation">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:visibility="visible"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <include layout="@layout/list_activity_timeline"/>
                        <include layout="@layout/list_activity_timeline"/>
                        <include layout="@layout/list_activity_timeline"/>
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="100"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:id="@+id/rl_timeAndDate"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_weight="20"
                                android:layout_height="match_parent">
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/rl_color"
                                android:layout_width="0dp"
                                android:orientation="vertical"
                                android:layout_weight="6"
                                android:weightSum="100"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_height="match_parent">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:gravity="center"
                                    android:layout_height="match_parent">
                                    <View
                                        android:layout_width="0.8dp"
                                        android:layout_height="@dimen/_450sdp"
                                        android:background="@color/red"/>
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/rl_ActivityDesc"
                                android:layout_width="0dp"
                                android:layout_weight="74"
                                android:layout_marginRight="10dp"
                                android:orientation="vertical"
                                android:layout_height="match_parent">
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rl_ActivityTimeLine"
                        android:layout_marginLeft="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <!--<LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                        <include layout="@layout/list_activity_timeline"/>
                        <include layout="@layout/list_activity_timeline"/>
                        <include layout="@layout/list_activity_timeline"/>
                        </LinearLayout>-->
                    </RelativeLayout>
                </RelativeLayout>



            </androidx.core.widget.NestedScrollView>


        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_circular"
            style="@style/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:indeterminateTint="@color/progressbar"
            android:visibility="gone" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>