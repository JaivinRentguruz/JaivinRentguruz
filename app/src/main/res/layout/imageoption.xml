<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.graphics.Color"/>
        <import type="androidx.core.content.ContextCompat" />

        <variable
            name="UiColor"
            type="com.rentguruz.app.model.display.ThemeColors" />
    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_5sdp"
    android:animateLayoutChanges="true"
    android:gravity="bottom"
    android:orientation="vertical">

    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/optionmenuheight"
        android:gravity="center_vertical|center_horizontal"
        android:paddingVertical="@dimen/_5sdp"
        android:text="Select Option"
        android:textColor="@color/white"
        android:background="@drawable/curve_box_white"
        android:backgroundTint="@{Color.parseColor(UiColor.primary)}"
        android:layout_marginBottom="@dimen/_5sdp"
        android:textSize="@dimen/_14ssp"
        android:theme="@style/texttheme" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/curve_box_white"
        android:backgroundTint="@{Color.parseColor(UiColor.additionalcolor)}"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cameraopen"
            android:layout_width="match_parent"
            android:layout_height="@dimen/optionmenuheight"
            android:gravity="center_vertical|center_horizontal"
            android:paddingVertical="@dimen/_3sdp"
            android:text="Camera"
            android:textColor="@{Color.parseColor(UiColor.secondary)}"
            android:textSize="@dimen/_14ssp"
            android:theme="@style/texttheme" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textColorHint" />

        <TextView
            android:id="@+id/gallaryopen"
            android:layout_width="match_parent"
            android:layout_height="@dimen/optionmenuheight"
            android:gravity="center_vertical|center_horizontal"
            android:paddingVertical="@dimen/_3sdp"
            android:text="Gallery"
            android:textColor="@{Color.parseColor(UiColor.secondary)}"
            android:textSize="@dimen/_14ssp"
            android:theme="@style/texttheme" />

    </LinearLayout>

    <TextView
        android:id="@+id/cancel2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/optionmenuheight"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/curve_box_white"
        android:backgroundTint="@{Color.parseColor(UiColor.primary)}"
        android:gravity="center_vertical|center_horizontal"
        android:paddingVertical="@dimen/_3sdp"
        android:text="Cancel"
        android:textColor="@color/themebackgroundtext"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        android:theme="@style/texttheme" />
</LinearLayout>
</layout>